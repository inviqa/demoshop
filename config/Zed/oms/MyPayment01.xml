<?xml version="1.0"?>
<statemachine
        xmlns="spryker:oms-01"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">

    <process name="MyPayment01" main="true">

        <states>
            <state name="new" reserved="true"/>
            <state name="paid"/>
            <state name="shipped"/>
            <state name="closed"/>
            <state name="returned"/>
            <state name="invalid"/>
        </states>

        <transitions>
            <transition happy="true" condition="Demo/IsPaymentAuthorized">
                <source>new</source>
                <target>paid</target>
                <event>pay</event>
            </transition>
            <transition>
                <source>new</source>
                <target>invalid</target>
                <event>pay</event>
            </transition>
            <transition happy="true">
                <source>paid</source>
                <target>shipped</target>
                <event>ship</event>
            </transition>
            <transition happy="true">
                <source>shipped</source>
                <target>closed</target>
                <event>deliver</event>
            </transition>
            <transition>
                <source>shipped</source>
                <target>returned</target>
                <event>return</event>
            </transition>
        </transitions>

        <events>
            <event name="pay" onEnter="true" command="Demo/Pay" />
            <event name="ship" manual="true" />
            <event name="deliver" manual="true" />
            <event name="return" timeout="3minutes" />
        </events>
    </process>

</statemachine>