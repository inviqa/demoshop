<?xml version="1.0"?>
<statemachine
        xmlns="spryker:oms-01"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="spryker:oms-01 http://static.spryker.com/oms-01.xsd">
    <!-- Used as example XML for OMS implementation -->

    <process name="Invoice01" main="true">

        <states>
            <state name="new" reserved="true"/>
            <state name="closed"/>
            <state name="invalid"/>
        </states>

        <transitions>
            <transition happy="true" condition="IsInvoiceCreated">
                <source>new</source>
                <target>closed</target>
                <event>create invoice</event>
            </transition>
            <transition>
                <source>new</source>
                <target>invalid</target>
                <event>create invoice</event>
            </transition>
        </transitions>

        <events>
            <event name="create invoice" command="CreateInvoice" manual="true" />
        </events>

    </process>

</statemachine>
