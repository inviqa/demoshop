<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ProductCountry\Persistence"
          namespaceAutoPackage="false"
          package="src.Orm.Zed.ProductCountry.Persistence">

    <table name="pyz_product_abstract_country" idMethod="native" phpName="PyzProductAbstractCountry">
        <column name="id_product_abstract_country" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="fk_product_abstract" required="true" type="INTEGER"/>
        <column name="fk_country" required="true" type="INTEGER"/>

        <foreign-key foreignTable="spy_product_abstract">
            <reference local="fk_product_abstract" foreign="id_product_abstract"/>
        </foreign-key>
        <foreign-key foreignTable="spy_country">
            <reference local="fk_country" foreign="id_country"/>
        </foreign-key>

        <unique name="pyz_product_abstract_country-unique-product">
            <unique-column name="fk_product_abstract"/>
        </unique>

        <id-method-parameter value="pyz_product_abstract_country_pk_seq"/>
    </table>

</database>
