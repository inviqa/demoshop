<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\ProductCountry\Persistence"
          namespaceAutoPackage="false"
          package="src.Orm.Zed.ProductCountry.Persistence">

    <table name="spy_product_abstract_country" idMethod="native">
        <column name="id" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="product_id" required="true" type="INTEGER"/>
        <column name="country_id" required="true" type="INTEGER"/>

        <foreign-key foreignTable="spy_product_abstract">
            <reference local="product_id" foreign="id_product_abstract"/>
        </foreign-key>
        <foreign-key foreignTable="spy_country">
            <reference local="country_id" foreign="id_country"/>
        </foreign-key>

        <unique name="spy_product_abstract_country-unique-product">
            <unique-column name="product_id"/>
        </unique>

        <id-method-parameter value="spy_product_abstract_country_pk_seq"/>
    </table>

</database>
