{% extends "@checkout/layout.twig" %}
{% import "@checkout/checkout/_macros.twig" as checkout %}

{% block content %}
    <div class="row columns">
        {{ form_start(voucherForm, { attr: { id: 'voucher-form' }}) }}

        <div class="callout">
            <h4>Insert your Voucher Code</h4>

            {{ form_widget(voucherForm.voucher, {'attr': {'class': '__toggler __inverted'}}) }}
        </div>

        <div class="callout">
            <div class="row align-right">
                <div class="small-12 medium-6 large-4 xlarge-3 columns">
                    <a href="{{ previousStepUrl }}" class="button expanded __no-margin-bottom">{{ 'general.back.button' | trans }}</a>
                </div>
                <div class="small-12 medium-6 large-4 xlarge-3 columns">
                    <button type="submit" class="button success expanded __no-margin-bottom">Apply and Go to Summary</button>
                </div>
            </div>
        </div>

        {{ form_end(voucherForm) }}
    </div>
{% endblock %}
